#include "Math/Matrix4x4.h"

typedef DS_NAMESPACE::Quaternion<float> quatf;
typedef DS_NAMESPACE::Vector3<float> vec3f;
typedef DS_NAMESPACE::Vector4<float> vec4f;
typedef DS_NAMESPACE::Matrix3x3<float> mat3f;
typedef DS_NAMESPACE::Matrix4x4<float> mat4f;

typedef DS_NAMESPACE::Quaternion<double> quatd;
typedef DS_NAMESPACE::Vector3<double> vec3d;
typedef DS_NAMESPACE::Vector4<double> vec4d;
typedef DS_NAMESPACE::Matrix3x3<double> mat3d;
typedef DS_NAMESPACE::Matrix4x4<double> mat4d;
